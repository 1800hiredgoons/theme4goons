.main-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 5%;
    background-color: #000; /* This is black. Change as needed */
}

.main-nav .nav-list {
    display: flex;
    list-style: none;
    padding-left: 0;
}

.nav-list li {
    margin: 0 15px;
}

.nav-list a {
    text-decoration: none;
    color: #FFF; /* This is white. Change as needed */
    transition: color 0.3s ease;
}

.nav-list a:hover {
    color: #888; /* This is a gray shade. Change as needed */
}

.nav-logo a img {
    max-height: 50px; /* Adjust as per your logo's requirement */
    width: auto;
}
