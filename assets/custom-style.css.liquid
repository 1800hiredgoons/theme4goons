body {
    font-family: 'Arial', sans-serif; /* Change this to your preferred font. */
    margin: 0;
    padding: 0;
}

.main-header {
    display: flex;
    justify-content: center; /* Updated to center the items */
    align-items: center;
    width: 100%;
    height: 80px; /* Added a fixed height for the header */
    background-color: #000;
}

.main-nav .nav-list {
    display: flex;
    justify-content: space-between; /* Ensures spacing between the list items */
    align-items: center;
    list-style: none;
    width: 80%; /* Restricting the width for better spacing */
    padding: 0;
    margin: 0 auto; /* Centers the nav list */
}

.nav-list li {
    margin: 0 20px; /* Increased the margin for better spacing */
}

.nav-list a {
    text-decoration: none;
    color: #FFF;
    font-size: 16px;
    transition: color 0.3s ease;
}

.nav-list a:hover {
    color: #888;
}

.nav-logo a img {
    max-height: 50px;
    width: auto;
}
