body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
}

body .main-header {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 80px;
    background-color: #000;
}

body .main-nav .nav-list {
    display: flex;
    justify-content: space-between;
    align-items: center;
    list-style: none;
    width: 80%;
    padding: 0;
    margin: 0 auto;
}

body .nav-list li {
    margin: 0 20px;
}

body .nav-list a {
    text-decoration: none;
    color: #FFF;
    font-size: 16px;
    transition: color 0.3s ease;
}

body .nav-list a:hover {
    color: #888;
}

body .nav-logo a img {
    max-height: 50px;
    width: auto;
}
